<Page x:Class="UP321.Pages.AuthorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP321.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorisationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Введите пароль</TextBlock>
            <TextBlock>111 - студент</TextBlock>
            <TextBlock>222 - препод.</TextBlock>
            <PasswordBox x:Name="PasswordTb" Width="150" Margin="0 10"></PasswordBox>
            <Button x:Name="EntryButt" Click="EntryButt_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
